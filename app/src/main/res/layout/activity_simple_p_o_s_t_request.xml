<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SPR.SimplePOSTRequest">

    <GridView
        android:id="@+id/grid_view_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/simple_post_request_grid_view_LL"
        app:layout_constraintTop_toTopOf="parent"
        android:numColumns="2"
        />

    <LinearLayout
        android:id="@+id/simple_post_request_grid_view_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <EditText
            android:id="@+id/simple_post_request_ed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter name"
            />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/simple_post_request_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add new person" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>